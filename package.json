{
  "name": "visualize-mediancut-algorithm",
  "version": "1.0.0",
  "description": "Visualize Median cut algorithm",
  "main": "index.js",
  "scripts": {
    "clear": "rm -rf dist",
    "dev": "npm run clear && run-p dev:*",
    "dev:html": "cpx src/**/*.html dist -w",
    "dev:js": "sane 'npm run build:js' --glob='src/**/*.ts'",
    "dev:css": "postcss src/index.pcss  -o dist/app.css -w",
    "build:html": "cpx src/**/*.html dist",
    "build:js": "esbuild --bundle src/index.ts --minify --outfile=dist/app.js",
    "build:css": "postcss src/index.pcss  -o dist/app.css",
    "lint:js": "eslint src/*.ts",
    "lint:css": "stylelint src/*.pcss",
    "format:js": "eslint src/*.ts --fix",
    "format:css": "stylelint src/*.pcss --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.ts": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t4y3/visualize-mediancut-algorithm.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/t4y3/visualize-mediancut-algorithm/issues"
  },
  "homepage": "https://github.com/t4y3/visualize-mediancut-algorithm#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "cpx": "^1.5.0",
    "esbuild": "^0.6.12",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5",
    "sane": "^4.1.0",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "typescript": "^3.9.7"
  }
}
