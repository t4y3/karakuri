{
  "name": "pirr",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run build:js & npm run build:css",
    "build:js": "rollup -c",
    "build:css": "NODE_ENV=production postcss public/global.css -o public/index.css",
    "dev": "npm run dev:js & npm run dev:css",
    "dev:js": "rollup -c -w",
    "dev:css": "postcss public/global.css -o public/index.css -w",
    "start": "sirv public",
    "validate": "svelte-check",
    "deploy": "rm -rf ../../docs/pirr && cp -r public ../../docs/pirr"
  },
  "dependencies": {
    "mediancut": "^2.1.0",
    "taxis": "0.0.3",
    "tweakpane": "^1.5.8"
  }
}
